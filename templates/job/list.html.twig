{% extends 'base.html.twig' %}

{% block title %}
    {{parent()}} - Liste des jobs
{% endblock %}

{% block body %}
    <h2> Liste des jobs</h2>
    <ul>
        {% for job in lesJob %}
            <li>
                {% set id_job='/job/edit/' ~ job.id %}
                <a href={{id_job}}>{{job.name}}</a>

                {# DÃ©claration de la variable id_suppress pour la passer d'URL #}
                {% set id_suppress='/job/delete/' ~ job.id %}

                <a href={{id_suppress}} class="btn btn-danger"><i class="glyphicon glyphicon-trash"></i>Supprimer</a>
            </li>
        {% else %}
            <li>Pas de job</li>
        {% endfor %}
    </ul>
{% endblock %}
