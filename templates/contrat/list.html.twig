{% extends 'base.html.twig' %}

{% block title %}
    {{parent()}} - Liste des contrats
{% endblock %}

{% block body %}
    <h2> Liste des contrats</h2>
    <ul>
        {% for cont in lesCont %}
            <li>
                {% set id_contrat='/contrat/edit/' ~ cont.id %}
                <a href={{id_contrat}}>{{cont.name}}</a>

                {# DÃ©claration de la variable id_suppress pour la passer d'URL #}
                {% set id_suppress='/contrat/delete/' ~ cont.id %}

                <a href={{id_suppress}} class="btn btn-danger"><i class="glyphicon glyphicon-trash"></i>Supprimer</a>
            </li>
        {% else %}
            <li>Pas de contrat</li>
        {% endfor %}
    </ul>
{% endblock %}
